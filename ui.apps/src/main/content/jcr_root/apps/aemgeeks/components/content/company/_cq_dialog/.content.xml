<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
  xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
  xmlns:cq="http://www.day.com/jcr/cq/1.0"
  xmlns:jcr="http://www.jcp.org/jcr/1.0"
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
  jcr:primaryType="nt:unstructured"
  jcr:title="Author Bio"
  sling:resourceType="cq/gui/components/authoring/dialog">

  <content
    granite:class="cmp-author_editor"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
      <column
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
          <name
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            fieldLabel="Name"
            fieldDescription="Enter the company name"
            emptyText="Name"
            name="./name"
            required="{Boolean}true"/>

          <description
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            fieldLabel="Description"
            fieldDescription="Enter the company description"
            name="./description"/>

          <createDateTime
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
            displayedFormat="MM-DD-YYYY HH:mm:ss"
            fieldLabel="datepicker"
            name="./createDateTime"
            type="datetime"
            typeHint="Date"/>

          <well
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/well"
            fieldLabel="Books">
            <items jcr:primaryType="nt:unstructured">
              <employees
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                fieldDescription="Click '+' to add a new employee"
                composite="{Boolean}false">
                <field
                  granite:class="cmp-teaser__editor-action"
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container"
                  name="./employees">
                  <items jcr:primaryType="nt:unstructured">
                    <name
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldLabel="Name"
                      fieldDescription="Enter the state name"
                      emptyText="Name"
                      name="./name"
                      required="{Boolean}true"/>
                    <age
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                      fieldDescription="employee age"
                      fieldLabel="Employee Age"
                      max="100"
                      min="1"
                      name="./age"/>
                  </items>
                </field>
              </employees>
              <granite:data
                jcr:primaryType="nt:unstructured"
                max-items="{Long}5"
                min-items="{Long}3"/>
            </items>
          </well>
        </items>
      </column>
    </items>
  </content>
</jcr:root>